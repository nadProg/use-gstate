  "private": false,
  "author": "Your Name",
  "license": "MIT",
  "keywords": [
    "react",
    "state-management",
    "hooks",
    "global-state",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/evo-community/create-gstore"
  },
  "homepage": "https://evo-community.github.io/use-gstate",
  "files": [
    "dist"
  ],
  "main": "./dist/lib.umd.cjs",
  "module": "./dist/lib.js",
